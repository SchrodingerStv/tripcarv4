<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.steven.tripcar.models.CocheSelectFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imagenCoche"
        android:layout_marginLeft="70dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />
    <TextView
        android:id="@+id/labelMarcaSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marca:"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/marcaModeloSelect"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-27dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    <TextView
        android:id="@+id/labelTamanioSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TamaÃ±o:"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/tamanioSelect"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-28dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    <TextView
        android:id="@+id/labelPrecioSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio:"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/precioSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="-27dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    <TextView
        android:id="@+id/labelMatriculaSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matricula:"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/matriculaSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="-27dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <EditText
        android:id="@+id/fechaInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:focusable="false"
        android:clickable="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <EditText
        android:id="@+id/horaInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:focusable="false"
        android:clickable="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <Button
        android:id="@+id/fechaIni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservar"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"/>



</LinearLayout>
